{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ES2022",
			"dom",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": false,
		"noEmitOnError": false,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"erasableSyntaxOnly": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true
	},
	"include": [
		"src/client/**/*"
, "src/client/web-elements"	],
	"exclude": [
		"node_modules",
		"dist"
	]
}