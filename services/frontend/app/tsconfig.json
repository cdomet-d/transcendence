{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src/",
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "esnext",
		"lib": [
			"ES2022",
			"dom",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		
		/* Bundler mode */
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": false,
		"noEmitOnError": false,
		"esModuleInterop": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		// "noUnusedParameters": true,
		"erasableSyntaxOnly": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"noImplicitOverride": true
	},
	"include": [
		"src/server/**/*",
		"src/client/**/*",
		"src/client/web-elements",
		"fastify.d.ts" 
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}