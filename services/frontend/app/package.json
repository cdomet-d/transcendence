{
	"name": "frontend",
	"version": "1.0.0",
	"private": true,
	"main": "server.js",
	"type": "module",
	"description": "",
	"author": "",
	"license": "ISC",
	"scripts": {
		"copy:html": "mkdir -p dist/client && cp -r src/client/index.html dist/client",
		"copy:assets": "mkdir -p dist/client/ && cp -r src/client/assets dist/client && npm run copy:html",
		"build:css": "postcss ./src/client/css/tailwind.css -o ./dist/client/css/output.css",
		"build": "node build.js && npm run build:css && npm run copy:assets",
		"watch": "node build.js --watch && npm run build:css",
		"dev": "concurrently \"npm run watch\" \"nodemon -q\"",
		"format": "npx prettier --write \"./src/**/*.ts\"",
		"lint": "eslint ."
	},
	"keywords": [],
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
