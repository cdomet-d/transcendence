		"fastify": "^5.5.0",
		"mime": "^4.1.0",
		"postcss-import": "^16.1.1",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.37.0",
		"@tailwindcss/vite": "^4.1.12",
		"@types/node": "^24.6.0",
		"@typescript-eslint/eslint-plugin": "^8.46.1",
		"autoprefixer": "^10.4.21",
		"browser-image-compression": "^2.0.2",
		"concurrently": "^9.2.1",
		"esbuild": "^0.25.12",
